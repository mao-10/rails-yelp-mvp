<div class="container">
  <div class="restaurant-details">
    <div class="top-section flex-column text-center">
      <h1 class=""> <%=@restaurant.name  %> </h1>
      <%# <%= link_to "Write a Review", new_restaurant_review_path(@restaurant.id), class: "text-decoration-none btn btn-primary m-2 bg-secondary" %>
    </div>
    <div class="row">
      <div class="container col col-md-6">
        <ul class="list-group mt-5">
          <li class="list-group-item text-black"><p>Address: </p><%= @restaurant.address %></li>
          <li class="list-group-item text-black"><p>Phone Number: </p><%= @restaurant.phone_number %></li>
          <li class="list-group-item text-black"><p>Category: </p><%= @restaurant.category %></li>
        </ul>
        <h3 class="mt-3">Reviews</h3>
        <ul class="list-group">
          <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item"><%= review.content %></li>
          <% end %>
        </ul>
      </div>
      <div class="col col-md-6">
        <%= render "reviews/form", restaurant: @restaurant, review: @review %>
      </div>
    </div>
  </div>
</div>
